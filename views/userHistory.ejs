<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History</title>
  <link href="/css/main.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-base-100 text-base-content">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: '/userHistory' }) %>

  <div class="container mx-auto p-4">

    <!-- Hero Section -->
    <div class="hero bg-base-200 rounded-lg p-6 mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-4xl font-bold">User History</h1>
          <p class="py-4">Welcome, <strong><%= session.user.userName %></strong> (<%= session.user.email %>)</p>
        </div>
      </div>
    </div>

    <!-- User History Table -->
    <div class="overflow-x-auto">
      <table class="table w-full bg-base-100 shadow-xl">
        <thead>
          <tr>
            <th class="bg-base-200">Login Date/Time</th>
            <th class="bg-base-200">Client Information</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach((entry) => { %>
            <tr>
              <td><%= new Date(entry.dateTime).toLocaleString() %></td>
              <td><%= entry.userAgent %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </div>

</body>
</html>
